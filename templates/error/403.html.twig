{% extends 'base.html.twig' %}

{% block title %}Accès Refusé - Retail App{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card">
            <div class="card-body py-5">
                <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                <h1 class="display-4 text-danger">403</h1>
                <h2 class="mb-4">Accès Refusé</h2>
                <p class="lead mb-4">
                    Vous n'avez pas les permissions nécessaires pour accéder à cette page.
                </p>
                
                {% if not app.user %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Vous devez être connecté pour accéder à cette page.
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                        <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus me-2"></i>S'inscrire
                        </a>
                    </div>
                {% else %}
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-home me-2"></i>Retour à l'accueil
                        </a>
                        <a href="{{ path('app_profile') }}" class="btn btn-info btn-lg">
                            <i class="fas fa-user me-2"></i>Mon profil
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
