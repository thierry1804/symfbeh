{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients - CRM{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- En-tête de la page -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-users mr-2"></i>Gestion des Clients
            </h1>
            <p class="text-muted">Système CRM - Gestion complète de votre portefeuille clients</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_customer_export') }}" class="btn btn-outline-secondary">
                <i class="fas fa-download mr-1"></i>Exporter
            </a>
            <a href="{{ path('app_customer_dashboard') }}" class="btn btn-outline-primary">
                <i class="fas fa-chart-bar mr-1"></i>Tableau de bord
            </a>
            <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
                <i class="fas fa-plus mr-1"></i>Nouveau Client
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Clients
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ statistics.prospect + statistics.client + statistics.vip + statistics.inactif }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Clients Actifs
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ statistics.client + statistics.vip }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Prospects
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ statistics.prospect }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Clients VIP
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ statistics.vip }}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-crown fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter mr-1"></i>Filtres de recherche
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ filters.search|default('') }}" 
                           placeholder="Nom, email, entreprise...">
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">Statut</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tous</option>
                        <option value="prospect" {{ (filters.status|default('')) == 'prospect' ? 'selected' : '' }}>Prospect</option>
                        <option value="client" {{ (filters.status|default('')) == 'client' ? 'selected' : '' }}>Client</option>
                        <option value="vip" {{ (filters.status|default('')) == 'vip' ? 'selected' : '' }}>VIP</option>
                        <option value="inactif" {{ (filters.status|default('')) == 'inactif' ? 'selected' : '' }}>Inactif</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="source" class="form-label">Source</label>
                    <select class="form-select" id="source" name="source">
                        <option value="">Toutes</option>
                        <option value="site_web" {{ (filters.source|default('')) == 'site_web' ? 'selected' : '' }}>Site web</option>
                        <option value="recommandation" {{ (filters.source|default('')) == 'recommandation' ? 'selected' : '' }}>Recommandation</option>
                        <option value="salon" {{ (filters.source|default('')) == 'salon' ? 'selected' : '' }}>Salon</option>
                        <option value="reseaux_sociaux" {{ (filters.source|default('')) == 'reseaux_sociaux' ? 'selected' : '' }}>Réseaux sociaux</option>
                        <option value="publicite" {{ (filters.source|default('')) == 'publicite' ? 'selected' : '' }}>Publicité</option>
                        <option value="email_marketing" {{ (filters.source|default('')) == 'email_marketing' ? 'selected' : '' }}>Email marketing</option>
                        <option value="telephone" {{ (filters.source|default('')) == 'telephone' ? 'selected' : '' }}>Téléphone</option>
                        <option value="autre" {{ (filters.source|default('')) == 'autre' ? 'selected' : '' }}>Autre</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="assignedTo" class="form-label">Assigné à</label>
                    <select class="form-select" id="assignedTo" name="assignedTo">
                        <option value="">Tous</option>
                        {% for user in users %}
                            <option value="{{ user.id }}" {{ (filters.assignedTo|default('')) == user.id ? 'selected' : '' }}>
                                {{ user.fullName }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="isActive" class="form-label">État</label>
                    <select class="form-select" id="isActive" name="isActive">
                        <option value="1" {{ filters.isActive == '1' ? 'selected' : '' }}>Actifs</option>
                        <option value="0" {{ filters.isActive == '0' ? 'selected' : '' }}>Inactifs</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des clients -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list mr-1"></i>Liste des Clients
            </h6>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" id="bulkAssignBtn" style="display: none;">
                    <i class="fas fa-user-plus mr-1"></i>Assigner
                </button>
                <button type="button" class="btn btn-sm btn-outline-warning" id="bulkStatusBtn" style="display: none;">
                    <i class="fas fa-tags mr-1"></i>Changer statut
                </button>
            </div>
        </div>
        <div class="card-body">
            {% if customers is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">Aucun client trouvé</h5>
                    <p class="text-muted">Aucun client ne correspond à vos critères de recherche.</p>
                    <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus mr-1"></i>Ajouter un client
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-bordered" id="customersTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="30">
                                    <input type="checkbox" id="selectAll" class="form-check-input">
                                </th>
                                <th>Client</th>
                                <th>Entreprise</th>
                                <th>Contact</th>
                                <th>Statut</th>
                                <th>Assigné à</th>
                                <th>Dernier contact</th>
                                <th>Prochain suivi</th>
                                <th width="150">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input customer-checkbox" 
                                               value="{{ customer.id }}">
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                {{ customer.firstName|first|upper }}{{ customer.lastName|first|upper }}
                                            </div>
                                            <div>
                                                <div class="fw-bold">{{ customer.fullName }}</div>
                                                <small class="text-muted">{{ customer.email }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if customer.company %}
                                            <div class="fw-bold">{{ customer.company }}</div>
                                            {% if customer.jobTitle %}
                                                <small class="text-muted">{{ customer.jobTitle }}</small>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if customer.phone %}
                                            <div><i class="fas fa-phone text-muted me-1"></i>{{ customer.phone }}</div>
                                        {% endif %}
                                        {% if customer.mobile %}
                                            <div><i class="fas fa-mobile-alt text-muted me-1"></i>{{ customer.mobile }}</div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ customer.statusColor }}">
                                            {{ customer.statusLabel }}
                                        </span>
                                        {% if customer.source %}
                                            <br><small class="text-muted">{{ customer.source|title }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if customer.assignedTo %}
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    {{ customer.assignedTo.firstName|first|upper }}{{ customer.assignedTo.lastName|first|upper }}
                                                </div>
                                                <span>{{ customer.assignedTo.fullName }}</span>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if customer.lastContactAt %}
                                            <div>{{ customer.lastContactAt|date('d/m/Y') }}</div>
                                            <small class="text-muted">{{ customer.lastContactAt|date('H:i') }}</small>
                                        {% else %}
                                            <span class="text-muted">Jamais</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if customer.nextFollowUpAt %}
                                            {% set daysUntil = customer.nextFollowUpAt|date('U') - 'now'|date('U') %}
                                            {% set daysUntil = daysUntil / 86400 %}
                                            <div class="d-flex align-items-center">
                                                <div>{{ customer.nextFollowUpAt|date('d/m/Y') }}</div>
                                                {% if daysUntil < 0 %}
                                                    <span class="badge bg-danger ms-1">En retard</span>
                                                {% elseif daysUntil <= 3 %}
                                                    <span class="badge bg-warning ms-1">Bientôt</span>
                                                {% endif %}
                                            </div>
                                        {% else %}
                                            <span class="text-muted">Non programmé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_customer_show', {'id': customer.id}) }}" 
                                               class="btn btn-sm btn-outline-primary" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" 
                                               class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteCustomer({{ customer.id }})" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <nav aria-label="Pagination des clients">
                        <ul class="pagination justify-content-center">
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_customer_index', app.request.queryString|merge({'page': currentPage - 1})) }}">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            {% endif %}
                            
                            {% for page in 1..totalPages %}
                                <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('app_customer_index', app.request.queryString|merge({'page': page})) }}">
                                        {{ page }}
                                    </a>
                                </li>
                            {% endfor %}
                            
                            {% if currentPage < totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_customer_index', app.request.queryString|merge({'page': currentPage + 1})) }}">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>

<!-- Modals pour les actions en lot -->
<div class="modal fade" id="bulkAssignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assigner des clients</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('app_customer_bulk_assign') }}" method="post">
                <div class="modal-body">
                    <p>Assigner <span id="selectedCount">0</span> client(s) à :</p>
                    <select name="assignedTo" class="form-select" required>
                        <option value="">Sélectionnez un utilisateur</option>
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.fullName }}</option>
                        {% endfor %}
                    </select>
                    <input type="hidden" name="customerIds" id="customerIds">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Assigner</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="bulkStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Changer le statut</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('app_customer_bulk_status') }}" method="post">
                <div class="modal-body">
                    <p>Changer le statut de <span id="selectedCount2">0</span> client(s) vers :</p>
                    <select name="status" class="form-select" required>
                        <option value="">Sélectionnez un statut</option>
                        <option value="prospect">Prospect</option>
                        <option value="client">Client</option>
                        <option value="vip">VIP</option>
                        <option value="inactif">Inactif</option>
                    </select>
                    <input type="hidden" name="customerIds" id="customerIds2">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Changer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir désactiver ce client ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Désactiver</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des cases à cocher
    const selectAll = document.getElementById('selectAll');
    const customerCheckboxes = document.querySelectorAll('.customer-checkbox');
    const bulkAssignBtn = document.getElementById('bulkAssignBtn');
    const bulkStatusBtn = document.getElementById('bulkStatusBtn');

    selectAll.addEventListener('change', function() {
        customerCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
        updateBulkButtons();
    });

    customerCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateBulkButtons);
    });

    function updateBulkButtons() {
        const checkedBoxes = document.querySelectorAll('.customer-checkbox:checked');
        const count = checkedBoxes.length;
        
        if (count > 0) {
            bulkAssignBtn.style.display = 'inline-block';
            bulkStatusBtn.style.display = 'inline-block';
            
            const customerIds = Array.from(checkedBoxes).map(cb => cb.value);
            document.getElementById('customerIds').value = customerIds.join(',');
            document.getElementById('customerIds2').value = customerIds.join(',');
            document.getElementById('selectedCount').textContent = count;
            document.getElementById('selectedCount2').textContent = count;
        } else {
            bulkAssignBtn.style.display = 'none';
            bulkStatusBtn.style.display = 'none';
        }
    }

    // Actions en lot
    bulkAssignBtn.addEventListener('click', function() {
        new bootstrap.Modal(document.getElementById('bulkAssignModal')).show();
    });

    bulkStatusBtn.addEventListener('click', function() {
        new bootstrap.Modal(document.getElementById('bulkStatusModal')).show();
    });
});

function deleteCustomer(customerId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const form = document.getElementById('deleteForm');
    form.action = `/admin/customers/${customerId}`;
    modal.show();
}
</script>
{% endblock %}
