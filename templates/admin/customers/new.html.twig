{% extends 'base.html.twig' %}

{% block title %}Nouveau Client - CRM{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- En-tête de la page -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_customer_index') }}">Clients</a></li>
                    <li class="breadcrumb-item active">Nouveau client</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user-plus mr-2"></i>Nouveau Client
            </h1>
            <p class="text-muted">Ajouter un nouveau client au système CRM</p>
        </div>
        <div>
            <a href="{{ path('app_customer_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left mr-1"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-edit mr-1"></i>Informations du Client
                    </h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <!-- Informations personnelles -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-user mr-1"></i>Informations personnelles
                            </h6>
                            
                            <div class="mb-3">
                                {{ form_label(form.firstName) }}
                                {{ form_widget(form.firstName) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.lastName) }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.phone) }}
                                {{ form_widget(form.phone) }}
                                {{ form_errors(form.phone) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.mobile) }}
                                {{ form_widget(form.mobile) }}
                                {{ form_errors(form.mobile) }}
                            </div>
                        </div>
                        
                        <!-- Informations professionnelles -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-briefcase mr-1"></i>Informations professionnelles
                            </h6>
                            
                            <div class="mb-3">
                                {{ form_label(form.company) }}
                                {{ form_widget(form.company) }}
                                {{ form_errors(form.company) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.jobTitle) }}
                                {{ form_widget(form.jobTitle) }}
                                {{ form_errors(form.jobTitle) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.annualRevenue) }}
                                {{ form_widget(form.annualRevenue) }}
                                {{ form_errors(form.annualRevenue) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.employeeCount) }}
                                {{ form_widget(form.employeeCount) }}
                                {{ form_errors(form.employeeCount) }}
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <!-- Adresse -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-map-marker-alt mr-1"></i>Adresse
                            </h6>
                            
                            <div class="mb-3">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                                {{ form_errors(form.address) }}
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.postalCode) }}
                                        {{ form_widget(form.postalCode) }}
                                        {{ form_errors(form.postalCode) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.city) }}
                                        {{ form_widget(form.city) }}
                                        {{ form_errors(form.city) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.country) }}
                                {{ form_widget(form.country) }}
                                {{ form_errors(form.country) }}
                            </div>
                        </div>
                        
