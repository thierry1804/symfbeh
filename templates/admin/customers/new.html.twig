                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <!-- Sidebar avec aide -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-question-circle mr-1"></i>Aide
