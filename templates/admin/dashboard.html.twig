{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Administration{% endblock %}
{% block page_title %}Tableau de bord - Administration{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded p-3">
                            <i class="fas fa-users text-primary fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-1">{{ totalUsers }}</h4>
                        <p class="text-muted mb-0">Total utilisateurs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded p-3">
                            <i class="fas fa-user-check text-success fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-1">{{ activeUsers }}</h4>
                        <p class="text-muted mb-0">Utilisateurs actifs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded p-3">
                            <i class="fas fa-envelope-open text-info fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-1">{{ verifiedUsers }}</h4>
                        <p class="text-muted mb-0">Emails vérifiés</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded p-3">
                            <i class="fas fa-user-clock text-warning fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mb-1">{{ totalUsers - activeUsers }}</h4>
                        <p class="text-muted mb-0">Utilisateurs inactifs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Utilisateurs récents</h5>
                <a href="{{ path('app_admin_users') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-list me-1"></i>Voir tous
                </a>
            </div>
            <div class="card-body">
                {% if recentUsers|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Utilisateur</th>
                                    <th>Email</th>
                                    <th>Statut</th>
                                    <th>Vérifié</th>
                                    <th>Date d'inscription</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in recentUsers %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-3">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <span class="text-primary fw-bold">{{ user.fullName|first|upper }}</span>
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">{{ user.fullName }}</h6>
                                                    <small class="text-muted">
                                                        {% for role in user.roles %}
                                                            {% if role != 'ROLE_USER' %}
                                                                <span class="badge bg-secondary me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            {% if user.isActive %}
                                                <span class="badge bg-success">Actif</span>
                                            {% else %}
                                                <span class="badge bg-danger">Inactif</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.isVerified %}
                                                <span class="badge bg-info">Vérifié</span>
                                            {% else %}
                                                <span class="badge bg-warning">Non vérifié</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-outline-primary" title="Voir">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-secondary" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun utilisateur trouvé</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_users') }}" class="btn btn-primary w-100">
                            <i class="fas fa-users me-2"></i>Gérer les utilisateurs
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_admin_user_new') }}" class="btn btn-success w-100">
                            <i class="fas fa-user-plus me-2"></i>Créer un utilisateur
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_customer_dashboard') }}" class="btn btn-success w-100">
                            <i class="fas fa-chart-line me-2"></i>CRM Dashboard
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_customer_index') }}" class="btn btn-info w-100">
                            <i class="fas fa-users me-2"></i>Gérer les clients
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_customer_new') }}" class="btn btn-warning w-100">
                            <i class="fas fa-user-plus me-2"></i>Nouveau client
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
