{% extends 'layouts/auth.html.twig' %}

{% block title %}Réinitialiser le mot de passe - Retail App{% endblock %}

{% block body %}
<div class="auth-header text-center mb-4">
    <h1 class="auth-title">Mot de passe oublié</h1>
    <p class="auth-subtitle">Entrez votre adresse email pour recevoir un lien de réinitialisation</p>
</div>

{% for flash_error in app.flashes('reset_password_error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        {{ flash_error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

{{ form_start(requestForm, {'attr': {'class': 'auth-form'}}) }}
    <div class="form-group mb-3">
        <label for="{{ requestForm.email.vars.id }}" class="form-label">
            <i class="fas fa-envelope me-2"></i>Adresse email
        </label>
        {{ form_widget(requestForm.email, {
            'attr': {
                'class': 'form-control form-control-lg',
                'placeholder': 'votre@email.com'
            }
        }) }}
        {{ form_errors(requestForm.email) }}
    </div>

    <div class="form-text mb-4">
        <i class="fas fa-info-circle me-2"></i>
        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
    </div>

    <div class="d-grid mb-4">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-paper-plane me-2"></i>Envoyer le lien de réinitialisation
        </button>
    </div>
{{ form_end(requestForm) }}

<div class="auth-footer">
    <div class="auth-divider">
        <span>ou</span>
    </div>
    <div class="mt-3">
        <p class="mb-0">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
            </a>
        </p>
    </div>
</div>
{% endblock %}
