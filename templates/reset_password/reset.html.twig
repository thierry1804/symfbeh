{% extends 'layouts/auth.html.twig' %}

{% block title %}Nouveau mot de passe - Retail App{% endblock %}

{% block body %}
<div class="auth-header text-center mb-4">
    <h1 class="auth-title">Nouveau mot de passe</h1>
    <p class="auth-subtitle">Choisissez votre nouveau mot de passe</p>
</div>

{{ form_start(resetForm, {'attr': {'class': 'auth-form'}}) }}
    <div class="form-group mb-3">
        <label for="{{ resetForm.plainPassword.vars.id }}" class="form-label">
            <i class="fas fa-lock me-2"></i>Nouveau mot de passe
        </label>
        {{ form_widget(resetForm.plainPassword, {
            'attr': {
                'class': 'form-control form-control-lg',
                'placeholder': 'Votre nouveau mot de passe'
            }
        }) }}
        {{ form_errors(resetForm.plainPassword) }}
    </div>

    <div class="d-grid mb-4">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-key me-2"></i>Réinitialiser le mot de passe
        </button>
    </div>
{{ form_end(resetForm) }}

<div class="auth-footer">
    <div class="auth-divider">
        <span>ou</span>
    </div>
    <div class="mt-3">
        <p class="mb-0">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
            </a>
        </p>
    </div>
</div>
{% endblock %}
