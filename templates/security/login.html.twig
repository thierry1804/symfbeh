{% extends 'base.html.twig' %}

{% block title %}Connexion - Retail App{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-header text-center mb-4">
                <div class="auth-logo mb-3">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h1 class="auth-title">Bienvenue !</h1>
                <p class="auth-subtitle">Connectez-vous à votre compte Retail</p>
            </div>

            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Vous êtes connecté en tant que <strong>{{ app.user.fullName }}</strong>
                </div>
                <div class="d-grid">
                    <a href="{{ path('app_logout') }}" class="btn btn-warning">
                        <i class="fas fa-sign-out-alt me-2"></i>Se déconnecter
                    </a>
                </div>
            {% else %}
                <form method="post" class="auth-form">
                    <div class="form-group mb-3">
                        <label for="inputEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Adresse email
                        </label>
                        <input type="email" 
                               value="{{ last_username }}" 
                               name="email" 
                               id="inputEmail" 
                               class="form-control form-control-lg" 
                               autocomplete="email" 
                               required 
                               autofocus
                               placeholder="votre@email.com">
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="inputPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Mot de passe
                        </label>
                        <input type="password" 
                               name="password" 
                               id="inputPassword" 
                               class="form-control form-control-lg" 
                               autocomplete="current-password" 
                               required
                               placeholder="Votre mot de passe">
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <div class="d-grid mb-4">
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </button>
                    </div>
                </form>
                
                <div class="auth-footer text-center">
                    <div class="mb-3">
                        <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">
                            <i class="fas fa-key me-1"></i>Mot de passe oublié ?
                        </a>
                    </div>
                    <div class="auth-divider">
                        <span>ou</span>
                    </div>
                    <div class="mt-3">
                        <p class="mb-0">
                            Pas encore de compte ? 
                            <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold">
                                S'inscrire
                            </a>
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }
    
    .auth-wrapper {
        width: 100%;
        max-width: 400px;
    }
    
    .auth-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 0 40px 0 rgba(94, 92, 154, 0.06);
        padding: 2.5rem;
    }
    
    .auth-logo {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-color), var(--info-color));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: white;
        font-size: 1.5rem;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #181c32;
        margin-bottom: 0.5rem;
    }
    
    .auth-subtitle {
        color: #7e8299;
        font-size: 1rem;
        margin: 0;
    }
    
    .auth-form .form-label {
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 0.5rem;
    }
    
    .auth-form .form-control {
        border: 1px solid #e1e3ea;
        border-radius: 0.475rem;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .auth-form .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(0, 158, 247, 0.25);
    }
    
    .auth-form .form-check-label {
        color: #7e8299;
        font-size: 0.875rem;
    }
    
    .auth-footer a {
        color: var(--primary-color);
        font-size: 0.875rem;
    }
    
    .auth-footer a:hover {
        color: #0095e8;
    }
    
    .auth-divider {
        position: relative;
        text-align: center;
        margin: 1.5rem 0;
    }
    
    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #e1e3ea;
    }
    
    .auth-divider span {
        background: #ffffff;
        padding: 0 1rem;
        color: #7e8299;
        font-size: 0.875rem;
    }
    
    .btn-lg {
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
    }
    
    @media (max-width: 576px) {
        .auth-container {
            padding: 1rem;
        }
        
        .auth-card {
            padding: 2rem;
        }
    }
</style>
{% endblock %}
