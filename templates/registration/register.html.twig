{% extends 'layouts/auth.html.twig' %}

{% block title %}Inscription - Retail App{% endblock %}

{% block body %}
<div class="auth-header text-center mb-4">
    <h1 class="auth-title">Créer un compte</h1>
    <p class="auth-subtitle">Rejoignez notre plateforme retail</p>
</div>

{% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        {{ flash_error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

{% if form_errors(registrationForm) %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        {{ form_errors(registrationForm) }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endif %}

{{ form_start(registrationForm, {'attr': {'class': 'auth-form needs-validation'}}) }}

<div class="row mb-3">
    <div class="col-md-6">
        <label for="{{ registrationForm.firstName.vars.id }}" class="form-label">
            <i class="fas fa-user me-2"></i>Prénom
        </label>
        {{ form_widget(registrationForm.firstName, {
            'attr': {
                'class': 'form-control form-control-lg',
                'placeholder': 'Votre prénom'
            }
        }) }}
        {{ form_errors(registrationForm.firstName) }}
    </div>
    <div class="col-md-6">
        <label for="{{ registrationForm.lastName.vars.id }}" class="form-label">
            <i class="fas fa-user me-2"></i>Nom
        </label>
        {{ form_widget(registrationForm.lastName, {
            'attr': {
                'class': 'form-control form-control-lg',
                'placeholder': 'Votre nom'
            }
        }) }}
        {{ form_errors(registrationForm.lastName) }}
    </div>
</div>

<div class="form-group mb-3">
    <label for="{{ registrationForm.email.vars.id }}" class="form-label">
        <i class="fas fa-envelope me-2"></i>Adresse email
    </label>
    {{ form_widget(registrationForm.email, {
        'attr': {
            'class': 'form-control form-control-lg',
            'placeholder': 'votre@email.com'
        }
    }) }}
    {{ form_errors(registrationForm.email) }}
</div>

<div class="form-group mb-3">
    <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
        <i class="fas fa-lock me-2"></i>Mot de passe
    </label>
    {{ form_widget(registrationForm.plainPassword, {
        'attr': {
            'class': 'form-control form-control-lg',
            'placeholder': 'Votre mot de passe'
        }
    }) }}
    {{ form_errors(registrationForm.plainPassword) }}
</div>

<div class="form-group mb-4">
    <div class="form-check">
        {{ form_widget(registrationForm.agreeTerms, {
            'attr': {
                'class': 'form-check-input'
            }
        }) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
            J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a>
        </label>
    </div>
    {{ form_errors(registrationForm.agreeTerms) }}
</div>

<div class="d-grid mb-4">
    <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-user-plus me-2"></i>Créer mon compte
    </button>
</div>

{{ form_end(registrationForm) }}

<div class="auth-footer">
    <div class="auth-divider">
        <span>ou</span>
    </div>
    <div class="mt-3">
        <p class="mb-0">
            Déjà un compte ? 
            <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">
                Se connecter
            </a>
        </p>
    </div>
</div>
{% endblock %}
