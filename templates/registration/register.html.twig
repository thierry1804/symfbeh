{% extends 'base.html.twig' %}

{% block title %}Inscription - Retail App{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-header text-center mb-4">
                <div class="auth-logo mb-3">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h1 class="auth-title">Créer un compte</h1>
                <p class="auth-subtitle">Rejoignez notre plateforme retail</p>
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ flash_error }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if form_errors(registrationForm) %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ form_errors(registrationForm) }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'auth-form needs-validation'}}) }}
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="{{ registrationForm.firstName.vars.id }}" class="form-label">
                        <i class="fas fa-user me-2"></i>Prénom
                    </label>
                    {{ form_widget(registrationForm.firstName, {
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Votre prénom'
                        }
                    }) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                    <label for="{{ registrationForm.lastName.vars.id }}" class="form-label">
                        <i class="fas fa-user me-2"></i>Nom
                    </label>
                    {{ form_widget(registrationForm.lastName, {
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Votre nom'
                        }
                    }) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Adresse email
                </label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control form-control-lg',
                        'placeholder': 'votre@email.com'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            
            <div class="form-group mb-3">
                <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                    <i class="fas fa-lock me-2"></i>Mot de passe
                </label>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control form-control-lg',
                        'placeholder': 'Votre mot de passe'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            
            <div class="form-group mb-4">
                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'form-check-input'
                        }
                    }) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a>
                    </label>
                </div>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Créer mon compte
                </button>
            </div>
            
            {{ form_end(registrationForm) }}
            
            <div class="auth-footer text-center">
                <div class="auth-divider">
                    <span>ou</span>
                </div>
                <div class="mt-3">
                    <p class="mb-0">
                        Déjà un compte ? 
                        <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">
                            Se connecter
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }
    
    .auth-wrapper {
        width: 100%;
        max-width: 500px;
    }
    
    .auth-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 0 40px 0 rgba(94, 92, 154, 0.06);
        padding: 2.5rem;
    }
    
    .auth-logo {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-color), var(--info-color));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: white;
        font-size: 1.5rem;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #181c32;
        margin-bottom: 0.5rem;
    }
    
    .auth-subtitle {
        color: #7e8299;
        font-size: 1rem;
        margin: 0;
    }
    
    .auth-form .form-label {
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 0.5rem;
    }
    
    .auth-form .form-control {
        border: 1px solid #e1e3ea;
        border-radius: 0.475rem;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .auth-form .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(0, 158, 247, 0.25);
    }
    
    .auth-form .form-check-label {
        color: #7e8299;
        font-size: 0.875rem;
    }
    
    .auth-form .form-check-label a {
        color: var(--primary-color);
    }
    
    .auth-footer a {
        color: var(--primary-color);
        font-size: 0.875rem;
    }
    
    .auth-footer a:hover {
        color: #0095e8;
    }
    
    .auth-divider {
        position: relative;
        text-align: center;
        margin: 1.5rem 0;
    }
    
    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #e1e3ea;
    }
    
    .auth-divider span {
        background: #ffffff;
        padding: 0 1rem;
        color: #7e8299;
        font-size: 0.875rem;
    }
    
    .btn-lg {
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
    }
    
    @media (max-width: 576px) {
        .auth-container {
            padding: 1rem;
        }
        
        .auth-card {
            padding: 2rem;
        }
    }
</style>
{% endblock %}
